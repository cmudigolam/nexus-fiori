<mvc:View controllerName="com.nexus.asset.controller.Detail" xmlns:mvc="sap.ui.core.mvc" xmlns:uxap="sap.uxap"
 xmlns="sap.m" xmlns:f="sap.f" xmlns:l="sap.ui.layout"
    xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:cssgrid="sap.ui.layout.cssgrid">
    <core:Fragment fragmentName="com.nexus.asset.view.Breadcrumbs" type="XML" />
    <uxap:ObjectPageLayout id="idEngDrawingObjPageLayout" class="assetDetailPage" headerContentPinnable="true" showTitleInHeaderContent="true">
        <uxap:headerTitle>
            <uxap:ObjectPageDynamicHeaderTitle>
                <uxap:heading>
                    <Title text="{i18n>lblAssetDetails}" wrapping="true" />
                </uxap:heading>
                <uxap:expandedContent>
                    <ObjectStatus text="{= ${LocalDataModel>/selectedNodeData/Name} || '${i18n>lblNoAssetSelected}'}" />
                </uxap:expandedContent>
                <uxap:actions>
                    <OverflowToolbarButton id="shareBtn" type="Transparent" icon="sap-icon://action" press="onSharePress" tooltip="{LocalDataModel>/shareUrl}" />
                </uxap:actions>
                <uxap:navigationActions>
					<OverflowToolbarButton type="Transparent" icon="sap-icon://full-screen" press="handleFullScreen" id="enterFullScreenBtnMid" tooltip="{i18n>tooltipEnterFullScreen}" visible="{= ${/actionButtonsInfo/midColumn/fullScreen} !== null }" />
					<OverflowToolbarButton type="Transparent" icon="sap-icon://exit-full-screen" press="handleExitFullScreen" id="exitFullScreenBtnMid" tooltip="{i18n>tooltipExitFullScreen}" visible="{= ${/actionButtonsInfo/midColumn/exitFullScreen} !== null }" />
					<OverflowToolbarButton type="Transparent" icon="sap-icon://decline" press="handleClose" tooltip="{i18n>tooltipCloseColumn}" visible="{= ${/actionButtonsInfo/midColumn/closeColumn} !== null }" />
                </uxap:navigationActions>
            </uxap:ObjectPageDynamicHeaderTitle>
        </uxap:headerTitle>
        <uxap:sections>
            <uxap:ObjectPageSection ><!--title="Data Tables"-->
                <uxap:subSections>
                    <uxap:ObjectPageSubSection title="Available AIG's">
                        <uxap:blocks>
                        <VBox items="{LocalDataModel>/detailTileGroups}">
                            <VBox class="sapUiSmallMarginBottom">
                                <Title text="{LocalDataModel>Category}" level="H5" class="sapUiTinyMarginBottom" />
                                <FlexBox class="assetTileGrid" wrap="Wrap" items="{LocalDataModel>tiles}" backgroundDesign="Solid">
                                    <VBox class="assetTileWrapper">
                                        <GenericTile
                                            header="{LocalDataModel>Name}"
                                            subheader="{LocalDataModel>Description}"
                                            class="assetDetailTile"
                                            press="onTilePress">
                                            <TileContent>
                                                <ImageContent src="{LocalDataModel>icon}" />
                                            </TileContent>
                                        </GenericTile>
                                        <core:Icon visible="false" src="sap-icon://action" class="assetTileShareIcon" press="onTileSharePress" tooltip="{i18n>tooltipShareNavigate}" />
                                    </VBox>
                                </FlexBox>
                            </VBox>
                        </VBox>
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                    <uxap:ObjectPageSubSection title="Static Tiles">
                        <uxap:blocks>
                        <VBox >
                            
                        </VBox>
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
        </uxap:sections>
        <uxap:footer>
            <OverflowToolbar visible="false">
                <ToolbarSpacer />
                <Button id="idEditButton"  text="{i18n>btnEdit}" press="onEditPress" />
				<Button id="idSaveButton"  text="{i18n>btnSave}" press="onSavePress" />
				<Button text="{i18n>btnRecalculate}" press="onRecalculatePress"/>
            </OverflowToolbar>
        </uxap:footer>
    </uxap:ObjectPageLayout>
</mvc:View>

